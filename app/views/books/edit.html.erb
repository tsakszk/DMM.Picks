<!-- エラーメッセージ表示 -->
<% if @book.errors.any? %>
  <p><%= @book.errors.count %>error occurrence</p>
  <ul>
	<% @book.errors.full_messages.each do |message| %>
	<li><%= message %></li>
	<% end %>
  </ul>
<% end %>

<!-- 投稿の編集 -->
<div class="container">
  <div class="row">
	<div class="main col-md-12 col-lg-12">
	  <h1>Editing Book</h1>
	  <%= render "books/newform", book: @book %>
	  <%= link_to "Show", @book, class: "book_#{@book.id}" %>
	  <%= link_to "Back", books_path, class: "back" %>
    </div>
  </div>
</div>
