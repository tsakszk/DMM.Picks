<!-- エラーメッセージ表示-->
<% if @book.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
          <p><%= @book.errors.count %> errors prohibited this obj from being saved:</p>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
<% end %>
<!-- エラーメッセージ表示-->

<div class="container">
  <div class="row">
	<div class="col-md-3 col-lg-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: current_user %>
		<!--メモ右側の指定に注意。そこを間違えるとエラーが発生して表示されない -->

		<h2>New book</h2>
		<%= render 'books/newform', book: @book %>

	</div>

	<div class="col-xs-9">
		<h2>Books</h2>
		<!--books一覧 -->
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th>User</th>
					<th>Book</th>
					<th>Title</th>
					<th class="display1">Opinion</th>
					<th class="display2"></th>
					<th class="display2"></th>
				</tr>
			</thead>

			<tbody class="tbody">
				<% @books.each do |book| %>
				<tr>
					<td>
						<%= link_to(book.user) do %>
						<%= attachment_image_tag(book.user, :profile_image, fallback: "no-image-mini.jpg" ) %>
						<% end %>
					</td>
					<td>
					    <%= link_to(book.user) do %>
						<%= attachment_image_tag(book, :image,fallback: "no-image-mini.jpg") %>
						<% end %>
 				    </td>
					<td><%= link_to book.title, book, class: "book_#{book.id}" %></td>
					<td class="book_comment"><%= book.body %></td>
					<td class="display2">
						<% if book.favorited_by?(current_user) %>
							<%= link_to book_favorites_path(book), method: :delete do %>
							<i class="fa fa-heart" aria-hidden="true" style="color: green;"></i>
							<%= book.favorites.count %>
							<% end %>
						<% else %>
							<%= link_to book_favorites_path(book), method: :post do %>
							<i class="fa fa-heart" aria-hidden="true"></i>
							<%= book.favorites.count %>
							<% end %>
						<% end %>
					</td>
					<td class="display2"><%= "#{book.book_comments.count}" %>
					       <i class="far fa-comment-dots"></i>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>
		<!--books一覧 -->
        <div class= text-center>
		<%= paginate @books %>
		</div>
	</div>
  </div>
</div>
