<!-- フォロワー一覧 -->
<div class="container">
  <div class="row">
	<div class="col-md-12 col-lg-12">
      <h2>Follower Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <% if current_user.follower?(user)  %>
              <tr>
                <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
                <td><%= user.name%></td>
                <td><%= "Follows: #{user.follower.count}" %></td>
                <td><%= "Followers: #{user.followed.count}" %></td>
                <td>
                  <% if user.id != current_user.id %>
                    <% if current_user.following?(user) %>
                      <%= link_to 'Un follow', unfollow_path(user.id), method: :POST %>
                    <% else %>
                      <%= link_to 'To follow', follow_path(user.id), method: :POST %>
                    <% end %>
                  <% end %>
                </td>
                <td><%= link_to "Show", user, class: "user_#{user.id}" %></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>