<% if @users.present? %>
	<table class="table table-hover table-inverse">
    <h2> Users search for "<%= params[:search] %>" </h2>
		<thead>
			<tr>
				<th>Image</th>
				<th>name</th>
			</tr>
		</thead>
		<tbody>
			<% @users.each do |user| %>
			<tr>
				<td>
					<%= link_to user_path do %>
					<%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
					<% end %>
				</td>
				<td><%= link_to user.name, user, class: "user_#{user.id}" %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
<% elsif @books.present? %>
	<table class="table table-hover table-inverse">
    <h2>Books search for "<%= params[:search] %>" </h2>
		<thead>
			<tr>
				<th>Image</th>
				<th>Title</th>
				<th>Opinion</th>
			</tr>
		</thead>
		<tbody>
			<% @books.each do |book| %>
			<tr>
				<td>
					<%= link_to(book.user) do %>
					<%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
					<% end %>
				</td>
				<td><%= link_to book.title, book, class: "book_#{book.id}" %></td>
				<td><%= link_to book.body, book, class: "book_#{book.id}" %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
<% else %>
    <h2>Could not find  "<%= params[:search] %>" </h2>
<% end %>